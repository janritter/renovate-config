{
    "enabledManagers": [
        "ansible-galaxy",
        "circleci",
        "docker-compose",
        "dockerfile",
        "gomod",
        "homebrew",
        "nodenv",
        "npm",
        "nvm",
        "pre-commit",
        "terraform-version",
        "terraform",
        "pip_requirements",
        "poetry"
    ],
    "dependencyDashboard": true,
    "pre-commit": {
        "enabled": true
    },
    "extends": [
        "github>whitesource/merge-confidence:beta"
    ],
    "labels": [
        "renovate"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "addLabels": [
                "major"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest",
                "lockFileMaintenance",
                "rollback",
                "bump"
            ],
            "addLabels": [
                "minor"
            ],
            "groupName": "minor packages"
        },
        {
            "matchManagers": [
                "gomod"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest",
                "lockFileMaintenance",
                "rollback",
                "bump"
            ],
            "addLabels": [
                "minor"
            ],
            "groupName": "minor go packages"
        },
        {
            "matchManagers": [
                "pre-commit"
            ],
            "addLabels": [
                "pre-commit"
            ],
            "schedule": [
                "on monday before 8am"
            ]
        }
    ]
}